<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"/>
    <link rel="stylesheet" href="/css/style.css" >
</head>
<body>
    <main class="container">
        <!-- Navbar which can be reused across other pages -->
        <%- include('../partials/navbar'); %>

        <!-- Create a new post headline -->
        <div class="welcome-container">
            <h1>Recommend your favourite Pilates videos!</h1>
        </div>

        <!-- Form to submit a new post -->
        <div class="create-post-container">
            <form method="post">
                <fieldset>
                  <label>
                    Title
                    <input name="title" placeholder="Write the name of this post..."/>
                  </label>
                </fieldset>

                <fieldset>
                  <label>
                    Youtube link
                    <input name="url" placeholder="https://www.youtube.com/embed/..."/>
                  </label>
                </fieldset>

                <fieldset>
                  <label>
                    Level
                    <select id="level" name="level">
                      <% for (const key in options.level) { %>
                        <option value="<%= key %>"><%= options.level[key] %></option>
                        <% } %>
                    </select>
                  </label>
                </fieldset>

                <fieldset>
                  <label>
                    Duration (Minutes)
                    <input name="duration" value="10" type="number" placeholder="10"/>
                  </label>
                </fieldset>


                <fieldset>
                  <label>
                    Target Area
                    <select id="targetArea" name="targetArea">
                      <% for (const key in options.targetArea) { %>
                        <option value="<%= key %>"><%= options.targetArea[key] %></option>
                        <% } %>
                    </select>
                  </label>
                </fieldset>

                <label>
                Content
                <textarea name="content" placeholder="Post-workout feeling: [e.g., Energized, Relaxed, etc.] | Special features: No verbal instructions, low-intensity, beginner-friendly..." ></textarea>
                </label>
              
                <input
                  type="submit"
                  value=" Create post to recommend"
                />
              </form>
        </div>

        <!-- Back to homepage -->
        <div class="cancel-create-post">
          <a href="/">Cancel! Take me back to homepage!</a>
        </div>
        
    </main>
</body>
</html>